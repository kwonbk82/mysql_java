	<bean id = "sony" class="polymorphism.SonySpeaker"/>  -->	
	
	<context:component-scan base-package="com.spring.biz"></context:component-scan>
	
	<bean id="log" class="com.spring.biz.common.Log4jAdvice" />
	<bean id="afterReturning" class="com.spring.biz.common.AfterReturningAdvice" />
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close" >
		<property name="driverClassName" value=""/>
		<property name="url" value=""/>
		<property name="username" value=""/>
		<property name="password" value=""/>
	</bean>
	<bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" value="dataSource"/>
	</bean>
	<tx:advice id="txAdvice" transaction-manager="txManager">
		<tx:attributes>
			<tx:method name="get*" read-only="true"/>
			<tx:method name="*" />
		</tx:attributes>
	</tx:advice>
	
	<aop:config>
		<aop:pointcut id="allPointcut" expression="execution(* com.spring.biz..*Impl.*(..))" />
		<aop:pointcut id="getPointcut" expression="execution(* com.spring.biz..*Impl.get*(..))" />
		
		<aop:aspect ref="afterReturning">
			<aop:after-returning pointcut-ref="allPointcut" method="afterionLog" returning="returnObj"/>
		</aop:aspect>
	</aop:config>
	
	<aop:config>
		<aop:pointcut id="txPointcut" expression="execution(* com.spring.biz..*Impl.*(..))" />
		<aop:advisor advice-ref="txAdvice" pointcut-ref="txPointcut"/>
	</aop:config>
	
	
