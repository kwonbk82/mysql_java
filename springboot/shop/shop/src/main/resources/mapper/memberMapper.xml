<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macademy.shop.member.mapper.MemberMapper">

    <insert id="insertMember" parameterType="memberDto" useGeneratedKeys="true" keyProperty="memberId" keyColumn="member_id">
        INSERT INTO member(id,password,name,email,address,role)

        VALUES (#{id},#{password},#{name},#{email},#{address},#{role})
    </insert>

    <select id="overlapId" resultMap="memberDto" parameterType="String">
        SELECT member_id,id,email
        FROM member
        WHERE id=#{id}
    </select>
    <select id="overlapEmail" resultMap="memberDto" parameterType="String">
        SELECT member_id,id,email
        FROM member
        WHERE email=#{email}
    </select>
    <select id="loginMember">
        SELECT member_id,id,password,name,email,address,role
        FROM member
        WHERE id=#{id} AND password=#{password}
    </select>
</mapper>